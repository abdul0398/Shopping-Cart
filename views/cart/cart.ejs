<% layout('layouts/boilerplate') -%>

<section class="container" style="height: 100vh;">
  <h1 class="display-6">My Cart</h1>
    <div class="row">
        <div class="col-lg-8">
            
            <% for(let item of user.cart){%>
                <div class="card mx-auto mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                      <div class="col-4">
                        <img src="<%=item.img%>" class="img-fluid rounded-start" alt="...">
                      </div>
                      <div class="col-8">
                        <div class="card-body">
                          <h5 class="card-title"><%=item.name%></h5>
                          <p class="card-text"><%=item.desc%></p>
                          <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                        </div>
                      </div>
                    </div>
                  </div>
            <%} %> 
        </div>
        <div class="col-lg-4">
            <ul class="list-group">
                <% for(let item of user.cart) {%>
                    <li class="list-group-item"><span class="fw-bold"><%=item.name%> - </span>&#8377; <%=item.price%> <span></span></li>
                <% } %> 
                <li class="list-group-item fw-bold">Total Amount : &#8377; <%=totalAmount%></li>
            </ul>
               <button id="rzp-button1" class="btn btn-sm btn-success my-3">Checkout</button>
        </div>
    </div>   
</section>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        const helperRazorpay = (data) => {
            var options = {
                key: "rzp_test_SdSAVUdSYsSPY4", // Enter the Key ID generated from the Dashboard
                amount: data.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                currency: "INR",
                name: "Shopping cart",
                description: "Test Transaction",
                image: "",
                order_id: data.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                callback_url: "http://localhost:3000/api/payment/verify",
                prefill: {
                    "name": "Gaurav Kumar",
                    "email": "gaurav.kumar@example.com",
                    "contact": "9000090000"
                },
                theme: {
                    "color": "#3399cc"
                }
            }
            var rzp1 = new window.Razorpay(options);
            rzp1.open();
            rzp1.on('payment.failed', function (response) {
                alert(response.error.code);
                alert(response.error.description);
                alert(response.error.source);
                alert(response.error.step);
                alert(response.error.reason);
                alert(response.error.metadata.order_id);
                alert(response.error.metadata.payment_id);
            });
        }
        const api = async () => {
            console.log('fetch')
            const response = await fetch('http://localhost:3000/payment_gateway/razorpay').then(response => response.json())
                .then(data => {
                    console.log('fetch after');
                    helperRazorpay(data);
                }).catch(error=>{
                    console.log("Error aya hai");
                })
        }

        document.getElementById('rzp-button1').onclick = function (e) {
            console.log("button working");
            api();
            //e.preventDefault();
        }
    </script>


