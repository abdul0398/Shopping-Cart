<%- layout('boilerPlate') %>
<%- include('flash') %>
<div class="parent">
  <div class="w-25 mx-auto">
    <h1 class="display-6 text-center">Log in</h1>
    <form action="/login" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Username</label>
          <input type="text" class="form-control inputMinWidth" name="username" id="exampleInputEmail1" >
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="exampleInputPassword1">
        </div>
        <p>How you wanna Login?</p>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="role" id="buyer" value="buyer" required>
          <label class="form-check-label" for="flexRadioDefault1">
            Buyer
          </label>
        </div>
        <div class="form-check mb-3">
          <input class="form-check-input" type="radio" name="role" id="seller" value='seller'>
          <label class="form-check-label" for="flexRadioDefault2">
            Seller
          </label>
        </div>
        <button type="submit" class="btn btn-primary">log in</button>
        <p>Don't have an account <a href="/register">Sing Up</a></p>
      </form>
</div>

</div>

